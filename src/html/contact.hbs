{{> head }} {{> header showBanner='/images/main-banner-image.jpg' }}
<main>
  <div class="container">
    <section class="background">
      <div class="section-header">
        <h2 class="section-title">Contact US</h2>
      </div>
      <div class="section-body">
        <div class="row">
          <div class="col-xs-12 col-sm-6 col-xs-order-2">
            <!-- contact form -->
            <form action="javascript:void(0)" id="contact-form" name="contact-form">
              <input type="hidden" id="send-to" name="send-to" value="service@christalclearpools.com.au" />
              <input type="hidden" id="subject" name="subject" value="Contact Form Submission" />
              <div class="form-group">
                <label for="name">Name <span class="required">*</span></label>
                <input type="text" class="form-control input-sm" required name="name" id="name" />
              </div>
              <div class="form-group">
                <label for="email">Email <span class="required">*</span></label>
                <input type="email" class="form-control input-sm" name="email" id="email" />
              </div>
              <div class="form-group">
                <label for="phone">Phone <span class="required">*</span></label>
                <input type="tel" class="form-control input-sm" required name="phone" id="phone" minlength="10" />
              </div>
              <div class="form-group">
                <label for="suburb">Suburb <span class="required">*</span></label>
                <input type="text" class="form-control input-sm" name="suburb" id="suburb" />
              </div>
              <div class="form-group">
                <label for="message">Message <span class="required">*</span></label>
                <textarea class="form-control input-sm" name="message" id="message"></textarea>
              </div>
              <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Submit" />
                <input type="reset" class="btn btn-default" value="Clear" />
              </div>
            </form>
          </div>
          <div class="col-xs-12 col-sm-6 col-xs-order-1">
            <p>
              Chris'tal Clear Pool Maintenance services a large area; Tweed Heads, Kingscliff, Tweed Coast down to Byron Bay, Tweed Valley
              and Southern Gold Coast suburbs.
            </p>
            <p>
              If you would like to use our services, complete the contact form provided or call us now.
            </p>
            <p>
              We look forward to hearing from you.
            </p>
            <div class="contact-links">
              <a href="tel:0437671171"><i class="material-icons">phone</i> 0437 671 171</a>
              <a href="mailto:service@christalclearpools.com.au"><i class="material-icons">email</i> service@christalclearpools.com.au</a>
            </div>
            <p>

            </p>
          </div>
        </div>
      </div>
    </section>
  </div>
</main>
{{> footer }}